{
  "name": "being-website",
  "version": "0.1.0",
  "private": true,
  "description": "Clinical-grade mental health website for Being. MBCT app",
  "homepage": "https://being.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/being-app/website.git"
  },
  "keywords": [
    "mental-health",
    "mbct",
    "clinical",
    "nextjs",
    "typescript",
    "healthcare"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "build:analyze": "cross-env ANALYZE=true next build",
    "build:production": "npm run clinical:validate && npm run haptic:validate && npm run type-check && npm run lint && npm run accessibility:validate && next build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:accessibility": "npm run accessibility:axe && npm run accessibility:lighthouse",
    "clinical:test": "npx tsx src/test/clinical-test-runner.ts",
    "clinical:validate": "npm run clinical:assessment && npm run clinical:crisis && npm run clinical:export && npm run clinical:accessibility",
    "clinical:assessment": "jest --testPathPattern='src/test/clinical/assessment-scoring.test.ts' --verbose --runInBand",
    "clinical:crisis": "jest --testPathPattern='src/test/crisis/crisis-safety-protocols.test.ts' --verbose --runInBand",
    "clinical:export": "jest --testPathPattern='src/test/export/clinical-export-integration.test.ts' --verbose --runInBand",
    "clinical:accessibility": "jest --testPathPattern='src/test/accessibility/accessibility-compliance.test.ts' --verbose --runInBand",
    "clinical:report": "open reports/clinical/latest-clinical-report.html",
    "haptic:test": "npx tsx src/test/haptic/haptic-test-runner.ts",
    "haptic:clinical": "jest --testPathPattern='src/test/haptic/haptic-clinical-reliability.test.ts' --verbose --runInBand",
    "haptic:integration": "jest --testPathPattern='src/test/haptic/haptic-integration.test.ts' --verbose --runInBand",
    "haptic:accessibility": "jest --testPathPattern='src/test/haptic/haptic-accessibility.test.ts' --verbose --runInBand",
    "haptic:performance": "jest --testPathPattern='src/test/haptic/haptic-performance.test.ts' --verbose --runInBand",
    "haptic:validate": "npm run haptic:clinical && npm run haptic:integration && npm run haptic:accessibility && npm run haptic:performance",
    "haptic:report": "open reports/haptic/latest-haptic-report.html",
    "test:haptic:watch": "jest --watch --testPathPattern='src/test/haptic' --verbose",
    "test:haptic:ci": "npm run haptic:test -- --ci",
    "test:clinical:watch": "jest --watch --testPathPattern='src/test/(clinical|crisis|export|accessibility)' --verbose",
    "test:clinical:ci": "npm run clinical:test -- --ci",
    "accessibility:axe": "axe-playwright --config axe.config.js",
    "accessibility:lighthouse": "lighthouse http://localhost:3000 --only-categories=accessibility --output=html --output-path=./reports/accessibility-lighthouse.html",
    "accessibility:validate": "npm run lint -- --ext .tsx,.ts --max-warnings 0",
    "accessibility:audit": "node scripts/accessibility-audit.js",
    "accessibility:ci": "npm run accessibility:axe -- --fail-on-error",
    "performance:audit": "node scripts/performance-audit.js",
    "performance:lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./reports/lighthouse.html",
    "performance:accessibility": "lighthouse http://localhost:3000 --only-categories=performance,accessibility --output=html --output-path=./reports/perf-a11y.html",
    "performance:clinical": "node scripts/performance-audit.js http://localhost:3000",
    "performance:monitor": "npm run dev & sleep 5 && npm run performance:clinical",
    "clean": "rimraf .next out reports",
    "clean:test": "rimraf coverage reports/clinical .jest-cache",
    "format": "prettier --write \"src/**/*.{js,ts,jsx,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,jsx,tsx,json,css,md}\""
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "next": "14.2.32",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.6.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.32",
    "@playwright/test": "^1.45.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "axe-playwright": "^2.0.1",
    "babel-jest": "^29.7.0",
    "chrome-launcher": "^1.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.32",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "lighthouse": "^12.0.0",
    "postcss": "^8.4.39",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "puppeteer": "^24.19.0",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.4.4",
    "tsx": "^4.6.0",
    "typescript": "^5.5.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "Chrome >= 80",
      "Firefox >= 78",
      "Safari >= 13",
      "Edge >= 80"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
