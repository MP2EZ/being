# =====================================================
# SUPABASE CONFIGURATION FOR BEING MBCT APP
# =====================================================

# DEVELOPMENT ENVIRONMENT
# Copy this file to .env and fill in your Supabase project details

# =====================================================
# SUPABASE PROJECT SETTINGS
# =====================================================

# Your Supabase project URL
# Found in: Supabase Dashboard > Settings > API
EXPO_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Your Supabase anon/public key
# Found in: Supabase Dashboard > Settings > API > Project API keys
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# =====================================================
# ENVIRONMENT CONFIGURATION
# =====================================================

# Application environment
NODE_ENV=development

# Enable debug logging for Supabase
EXPO_PUBLIC_SUPABASE_DEBUG=true

# =====================================================
# CLOUD BACKUP SETTINGS
# =====================================================

# Enable automatic cloud backup (true/false)
EXPO_PUBLIC_CLOUD_BACKUP_ENABLED=true

# Backup interval in hours (default: 4)
EXPO_PUBLIC_BACKUP_INTERVAL_HOURS=4

# Maximum backup size in MB (default: 10)
EXPO_PUBLIC_MAX_BACKUP_SIZE_MB=10

# Enable backup compression (true/false)
EXPO_PUBLIC_BACKUP_COMPRESSION=true

# =====================================================
# ANALYTICS CONFIGURATION
# =====================================================

# Enable privacy-preserving analytics (true/false)
EXPO_PUBLIC_ANALYTICS_ENABLED=true

# Analytics batch size (default: 10)
EXPO_PUBLIC_ANALYTICS_BATCH_SIZE=10

# Analytics flush interval in seconds (default: 30)
EXPO_PUBLIC_ANALYTICS_FLUSH_INTERVAL=30

# =====================================================
# SECURITY SETTINGS
# =====================================================

# Enable integrity checks for backups (true/false)
EXPO_PUBLIC_INTEGRITY_CHECKS=true

# Circuit breaker failure threshold (default: 5)
EXPO_PUBLIC_CIRCUIT_BREAKER_THRESHOLD=5

# Circuit breaker timeout in milliseconds (default: 60000)
EXPO_PUBLIC_CIRCUIT_BREAKER_TIMEOUT=60000

# =====================================================
# DEVELOPMENT/TESTING
# =====================================================

# Skip Supabase initialization in tests (true/false)
EXPO_PUBLIC_SKIP_SUPABASE_IN_TESTS=true

# Enable offline mode simulation (true/false)
EXPO_PUBLIC_SIMULATE_OFFLINE=false

# Mock network delays in milliseconds (0 = disabled)
EXPO_PUBLIC_MOCK_NETWORK_DELAY=0

# =====================================================
# PRODUCTION OVERRIDES
# =====================================================
# These settings will be different in production

# Disable debug logging in production
# EXPO_PUBLIC_SUPABASE_DEBUG=false

# More conservative backup settings for production
# EXPO_PUBLIC_BACKUP_INTERVAL_HOURS=6
# EXPO_PUBLIC_MAX_BACKUP_SIZE_MB=5

# Stricter security in production
# EXPO_PUBLIC_CIRCUIT_BREAKER_THRESHOLD=3
# EXPO_PUBLIC_CIRCUIT_BREAKER_TIMEOUT=30000

# =====================================================
# SETUP INSTRUCTIONS
# =====================================================

# 1. Create a new Supabase project at https://supabase.com
# 2. Copy the URL and anon key from the API settings
# 3. Run the schema.sql file in the Supabase SQL editor
# 4. Copy this file to .env and fill in your values
# 5. Add .env to your .gitignore (DO NOT COMMIT)

# =====================================================
# SECURITY NOTES
# =====================================================

# - The anon key is safe to expose (it's public by design)
# - Never commit real values to version control
# - Use different projects for dev/staging/production
# - Enable RLS policies before going to production
# - Monitor usage to stay within free tier limits

# =====================================================
# FREE TIER LIMITS (as of 2024)
# =====================================================

# Database:
# - 500 MB storage
# - 2 GB bandwidth per month
# - 50,000 API requests per month
# - Unlimited anonymous authentication

# Estimated capacity with these limits:
# - ~5,000 users (100KB average backup size)
# - ~150 daily active users
# - ~300,000 analytics events per month

# =====================================================