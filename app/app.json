{
  "expo": {
    "name": "FullMind",
    "slug": "fullmind-mbct",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "Evidence-based mindfulness and cognitive therapy practices for mental wellness. Features daily check-ins, PHQ-9/GAD-7 assessments, and crisis support resources.",
    "keywords": ["mindfulness", "mental health", "MBCT", "wellness", "meditation", "anxiety", "depression"],
    "primaryColor": "#4A7C59",
    "privacy": "unlisted",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fullmind.mbct",
      "buildNumber": "1",
      "icon": "./assets/icon.png",
      "infoPlist": {
        "NSHealthShareUsageDescription": "FullMind integrates with Apple Health to provide comprehensive wellness tracking for your mental health journey.",
        "NSHealthUpdateUsageDescription": "FullMind can save your mindfulness session data to Apple Health to track your wellness progress.",
        "ITSAppUsesNonExemptEncryption": false,
        "LSApplicationCategoryType": "public.app-category.healthcare-fitness",
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "fullmind-deep-linking",
            "CFBundleURLSchemes": ["fullmind"]
          }
        ]
      },
      "config": {
        "usesNonExemptEncryption": false
      },
      "entitlements": {
        "com.apple.security.application-groups": ["group.com.fullmind.mbct.widgets"]
      }
    },
    "android": {
      "package": "com.fullmind.mbct",
      "versionCode": 1,
      "icon": "./assets/icon.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.WAKE_LOCK",
        "android.permission.RECEIVE_BOOT_COMPLETED"
      ],
      "intentFilters": [
        {
          "action": "android.intent.action.VIEW",
          "category": ["android.intent.category.DEFAULT", "android.intent.category.BROWSABLE"],
          "data": {
            "scheme": "fullmind"
          }
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "name": "FullMind MBCT",
      "shortName": "FullMind",
      "lang": "en",
      "scope": "/",
      "themeColor": "#4A7C59",
      "description": "Mindfulness-Based Cognitive Therapy for mental wellness"
    },
    "plugins": [
      "expo-secure-store",
      "expo-local-authentication",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#4A7C59",
          "defaultChannel": "default"
        }
      ],
      "./plugins/expo-fullmind-widgets"
    ],
    "extra": {
      "eas": {
        "projectId": "fullmind-mbct-2024"
      },
      "clinicalVersion": "1.0",
      "privacyPolicyUrl": "https://fullmind.app/privacy",
      "termsOfServiceUrl": "https://fullmind.app/terms",
      "supportUrl": "https://fullmind.app/support",
      "crisisHotline": "988",
      "buildType": "production"
    }
  }
}
