<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/widget_background">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true">

        <!-- App Icon -->
        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/app_icon_small"
            android:contentDescription="FullMind app icon"
            android:scaleType="centerCrop" />

        <!-- Title -->
        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="Today's Progress"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <!-- Progress Percentage -->
        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0% Complete"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif" />

    </LinearLayout>

    <!-- Session Indicators Section -->
    <LinearLayout
        android:id="@+id/sessions_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/header_section"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <!-- Morning Session -->
        <LinearLayout
            android:id="@+id/morning_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/morning_indicator"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/session_not_started"
                android:contentDescription="Morning session status" />

            <TextView
                android:id="@+id/morning_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Morning"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

        <!-- Midday Session -->
        <LinearLayout
            android:id="@+id/midday_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/midday_indicator"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/session_not_started"
                android:contentDescription="Midday session status" />

            <TextView
                android:id="@+id/midday_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Midday"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

        <!-- Evening Session -->
        <LinearLayout
            android:id="@+id/evening_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/evening_indicator"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/session_not_started"
                android:contentDescription="Evening session status" />

            <TextView
                android:id="@+id/evening_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Evening"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <!-- Crisis Button - ALWAYS VISIBLE for safety -->
    <Button
        android:id="@+id/crisis_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sessions_section"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Crisis Support"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@drawable/crisis_button_background"
        android:padding="8dp"
        android:minWidth="120dp"
        android:minHeight="48dp"
        android:visibility="visible"
        android:drawableLeft="@drawable/ic_phone"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Emergency crisis support - Tap for immediate help" />

    <!-- Last Update Time (for debugging) -->
    <TextView
        android:id="@+id/last_update_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginEnd="4dp"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="8sp"
        android:alpha="0.7"
        android:visibility="gone" />

</RelativeLayout>