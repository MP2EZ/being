/**
 * Enhanced Architecture Test Component for Being. MBCT App
 * Comprehensive New Architecture validation with clinical performance testing
 *
 * This component runs the complete validation suite to confirm:
 * 1. New Architecture is active (Fabric + TurboModules + Hermes)
 * 2. Clinical performance requirements are met
 * 3. Therapeutic timing standards are satisfied
 */

import React, { useEffect, useState } from 'react';
import { View, Text, StyleSheet, ScrollView, TouchableOpacity, Platform } from 'react-native';
import NewArchPerformanceValidator, { NewArchPerformanceValidation } from '../../utils/NewArchPerformanceValidator';

interface TestStatus {
  isRunning: boolean;
  currentPhase: string;
  progress: number;
  error: string | null;
}

const EnhancedArchitectureTest: React.FC = () => {
  const [testStatus, setTestStatus] = useState<TestStatus>({
    isRunning: false,
    currentPhase: 'Ready',
    progress: 0,
    error: null
  });

  const [validationResult, setValidationResult] = useState<NewArchPerformanceValidation | null>(null);
  const [testStartTime, setTestStartTime] = useState<number>(0);

  const validator = NewArchPerformanceValidator.getInstance();

  useEffect(() => {
    // Auto-start validation on component mount
    runValidation();
  }, []);

  const runValidation = async () => {
    setTestStatus({
      isRunning: true,
      currentPhase: 'Initializing...',
      progress: 0,
      error: null
    });

    setTestStartTime(performance.now());

    try {
      // Phase 1: Architecture Detection
      setTestStatus(prev => ({
        ...prev,
        currentPhase: 'Detecting New Architecture...',
        progress: 10
      }));

      await new Promise(resolve => setTimeout(resolve, 500)); // Brief pause for UI

      // Phase 2: Performance Testing
      setTestStatus(prev => ({
        ...prev,
        currentPhase: 'Running Performance Tests...',
        progress: 30
      }));

      // Run the comprehensive validation
      const result = await validator.validateNewArchitecturePerformance();

      setTestStatus(prev => ({
        ...prev,
        currentPhase: 'Analyzing Results...',
        progress: 80
      }));

      await new Promise(resolve => setTimeout(resolve, 500)); // Brief pause for analysis

      // Phase 3: Clinical Compliance Assessment
      setTestStatus(prev => ({
        ...prev,
        currentPhase: 'Validating Clinical Compliance...',
        progress: 90
      }));

      await new Promise(resolve => setTimeout(resolve, 300));

      // Complete
      setValidationResult(result);
      setTestStatus({
        isRunning: false,
        currentPhase: 'Complete',
        progress: 100,
        error: null
      });

      // Log comprehensive results
      console.log('\nüèóÔ∏è Enhanced Architecture Test Results:');
      console.log(`   Test Duration: ${Math.round(performance.now() - testStartTime)}ms`);
      console.log(`   Architecture Status: ${result.architectureStatus.newArchitecture ? 'ACTIVE' : 'INACTIVE'}`);
      console.log(`   Clinical Compliance: ${result.clinicalCompliance.toUpperCase()}`);
      console.log(`   Production Ready: ${result.overallPassed ? 'YES' : 'NO'}`);

    } catch (error) {
      const errorMessage = error instanceof Error ? error.message : 'Unknown validation error';
      setTestStatus({
        isRunning: false,
        currentPhase: 'Failed',
        progress: 0,
        error: errorMessage
      });

      console.error('‚ùå Enhanced architecture validation failed:', error);
    }
  };

  const getComplianceStatusColor = (compliance: string) => {
    switch (compliance) {
      case 'compliant': return styles.compliant;
      case 'warning': return styles.warning;
      case 'non-compliant': return styles.nonCompliant;
      default: return styles.unknown;
    }
  };

  const getTestStatusColor = (passed: boolean) => {
    return passed ? styles.testPassed : styles.testFailed;
  };

  const getClinicalImpactColor = (impact: string) => {
    switch (impact) {
      case 'critical': return styles.critical;
      case 'high': return styles.high;
      case 'medium': return styles.medium;
      case 'low': return styles.low;
      default: return styles.unknown;
    }
  };

  if (testStatus.isRunning) {
    return (
      <View style={styles.container}>
        <Text style={styles.title}>üî¨ Enhanced Architecture Validation</Text>

        <View style={styles.progressContainer}>
          <Text style={styles.phaseText}>{testStatus.currentPhase}</Text>

          <View style={styles.progressBar}>
            <View
              style={[styles.progressFill, { width: `${testStatus.progress}%` }]}
            />
          </View>

          <Text style={styles.progressText}>{testStatus.progress}%</Text>
        </View>

        <View style={styles.testingInfo}>
          <Text style={styles.infoText}>
            Running comprehensive validation of React Native New Architecture
            against Being. MBCT clinical performance requirements...
          </Text>
        </View>
      </View>
    );
  }

  if (testStatus.error) {
    return (
      <View style={styles.container}>
        <Text style={styles.title}>‚ùå Validation Error</Text>
        <Text style={styles.errorText}>{testStatus.error}</Text>

        <TouchableOpacity style={styles.retryButton} onPress={runValidation}>
          <Text style={styles.retryButtonText}>Retry Validation</Text>
        </TouchableOpacity>
      </View>
    );
  }

  if (!validationResult) {
    return (
      <View style={styles.container}>
        <Text style={styles.title}>‚ö†Ô∏è No Validation Results</Text>

        <TouchableOpacity style={styles.retryButton} onPress={runValidation}>
          <Text style={styles.retryButtonText}>Run Validation</Text>
        </TouchableOpacity>
      </View>
    );
  }

  return (
    <ScrollView style={styles.container} contentContainerStyle={styles.scrollContent}>
      <Text style={styles.title}>üèóÔ∏è Enhanced Architecture Validation</Text>

      {/* Overall Status */}
      <View style={[
        styles.overallStatusCard,
        validationResult.architectureStatus.newArchitecture ? styles.successCard : styles.errorCard
      ]}>
        <Text style={styles.overallStatusTitle}>
          New Architecture Status: {validationResult.architectureStatus.newArchitecture ? 'ACTIVE' : 'INACTIVE'}
        </Text>
        <Text style={styles.overallStatusSubtitle}>
          Clinical Compliance: {validationResult.clinicalCompliance.toUpperCase()}
        </Text>
      </View>

      {/* Architecture Components */}
      <View style={styles.sectionCard}>
        <Text style={styles.sectionTitle}>Architecture Components</Text>

        <View style={styles.componentRow}>
          <Text style={styles.componentLabel}>Fabric Renderer:</Text>
          <Text style={[
            styles.componentValue,
            validationResult.architectureStatus.fabric ? styles.enabled : styles.disabled
          ]}>
            {validationResult.architectureStatus.fabric ? '‚úÖ ENABLED' : '‚ùå DISABLED'}
          </Text>
        </View>

        <View style={styles.componentRow}>
          <Text style={styles.componentLabel}>TurboModules:</Text>
          <Text style={[
            styles.componentValue,
            validationResult.architectureStatus.turboModules ? styles.enabled : styles.disabled
          ]}>
            {validationResult.architectureStatus.turboModules ? '‚úÖ ENABLED' : '‚ùå DISABLED'}
          </Text>
        </View>

        <View style={styles.componentRow}>
          <Text style={styles.componentLabel}>Hermes Engine:</Text>
          <Text style={[
            styles.componentValue,
            validationResult.architectureStatus.hermes ? styles.enabled : styles.disabled
          ]}>
            {validationResult.architectureStatus.hermes ? '‚úÖ ACTIVE' : '‚ùå INACTIVE'}
          </Text>
        </View>
      </View>

      {/* Clinical Performance Tests */}
      <View style={styles.sectionCard}>
        <Text style={styles.sectionTitle}>Clinical Performance Tests</Text>

        {validationResult.performanceTests.map((test, index) => (
          <View key={index} style={styles.testCard}>
            <View style={styles.testHeader}>
              <Text style={styles.testName}>{test.testName}</Text>
              <Text style={[styles.testStatus, getTestStatusColor(test.passed)]}>
                {test.passed ? '‚úÖ PASS' : '‚ùå FAIL'}
              </Text>
            </View>

            <Text style={styles.testDescription}>{test.description}</Text>

            <View style={styles.testMetrics}>
              <Text style={styles.metricText}>
                Measured: {test.measured}{test.testName.includes('Frame Rate') ? 'fps' : 'ms'}
              </Text>
              <Text style={styles.metricText}>
                Target: {test.target}{test.testName.includes('Frame Rate') ? 'fps' : 'ms'}
              </Text>
              <Text style={[styles.impactText, getClinicalImpactColor(test.clinicalImpact)]}>
                Impact: {test.clinicalImpact.toUpperCase()}
              </Text>
            </View>
          </View>
        ))}
      </View>

      {/* Clinical Compliance Summary */}
      <View style={[styles.complianceCard, getComplianceStatusColor(validationResult.clinicalCompliance)]}>
        <Text style={styles.complianceTitle}>
          Clinical Compliance: {validationResult.clinicalCompliance.toUpperCase()}
        </Text>
        <Text style={styles.complianceSubtitle}>
          Production Ready: {validationResult.overallPassed ? 'YES' : 'NO'}
        </Text>
      </View>

      {/* Recommendations */}
      {validationResult.recommendations.length > 0 && (
        <View style={styles.sectionCard}>
          <Text style={styles.sectionTitle}>Recommendations</Text>

          {validationResult.recommendations.map((recommendation, index) => (
            <View key={index} style={styles.recommendationItem}>
              <Text style={styles.recommendationText}>{recommendation}</Text>
            </View>
          ))}
        </View>
      )}

      {/* Action Buttons */}
      <View style={styles.actionButtons}>
        <TouchableOpacity style={styles.rerunButton} onPress={runValidation}>
          <Text style={styles.rerunButtonText}>Re-run Validation</Text>
        </TouchableOpacity>
      </View>

      {/* Test Summary */}
      <View style={styles.summaryCard}>
        <Text style={styles.summaryTitle}>Validation Summary</Text>
        <Text style={styles.summaryText}>
          {`Platform: ${Platform.OS}\n`}
          {`Timestamp: ${validationResult.timestamp}\n`}
          {`Tests Run: ${validationResult.performanceTests.length}\n`}
          {`Tests Passed: ${validationResult.performanceTests.filter(t => t.passed).length}\n`}
          {`Duration: ${Math.round(performance.now() - testStartTime)}ms`}
        </Text>
      </View>

      <Text style={styles.footnote}>
        This enhanced validation confirms React Native New Architecture is functioning
        and meets Being. MBCT clinical performance requirements for therapeutic effectiveness.
      </Text>
    </ScrollView>
  );
};

